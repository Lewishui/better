<p id="notice"><%= notice %></p>

<h1>User Days</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Effective on</th>
      <th>Deposit amount</th>
      <th>Drawing amount</th>
      <th>Bid amount</th>
      <th>Bonus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_days.each do |user_day| %>
      <tr>
        <td><%= user_day.user %></td>
        <td><%= user_day.effective_on %></td>
        <td><%= user_day.deposit_amount %></td>
        <td><%= user_day.drawing_amount %></td>
        <td><%= user_day.bid_amount %></td>
        <td><%= user_day.bonus %></td>
        <td><%= link_to 'Show', user_day %></td>
        <td><%= link_to 'Edit', edit_user_day_path(user_day) %></td>
        <td><%= link_to 'Destroy', user_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

