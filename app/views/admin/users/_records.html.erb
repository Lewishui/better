<table class="table table-striped">
  <thead>
    <tr>
      <th>用户名</th>
      <th>注册时间</th>
      <th>电子邮箱</th>
      <th>电话号码</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @users.empty? %>
      <tr>
        <td colspan="6">暂无用户</td>
      <tr>
    <% else %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.display_created_at %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= link_to "编辑", edit_admin_user_path(user) %></td>
        <td><%= link_to "删除", admin_user_path(user), method: 'delete' %></td>
      </tr>
    <% end %>
  <% end %>

  </tbody>
</table>
<%= will_paginate @users if @users.respond_to? :total_pages%>
