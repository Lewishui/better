<div> <h2 class="page-header">添加用户  <small>所有资料都必须填写 </small> </h2>
</div>
<div>
  <%= better_form_for(@user, url: {:action=>"create"} ) do |f| %>
    <div class="form-inputs">
      <%= f.input :nickname %>
      <%= f.input :email %>
      <%= f.input :phone %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "添加用户" %>
    </div>
  <% end %>
</div>
