<div> <h2 class="page-header">资产管理 </h2>
</div>
<div>
  <div class="">
    <%=form_tag search_admin_game_instruments_path, method:"get", class:"form-inline", role:"form" do%>
      <div class="form-group">
        <label for="title">类别</label>
        <%@category_id ||= ""%>
        <%=instrument_category_select "category_id", @category_id%>
      </div>
      <div class="form-group">
        <%=submit_tag "查询",  class:"form-control"%>
      </div>
    <%end%>
  </div>
  <div style="padding-top:20px;">
    <%=form_tag batch_rate_admin_game_instruments_path, method:"put", class:"form-inline", role:"form" do%>
      <div class="form-group">
        <%=text_field_tag "rate", '', class:"form-control"%>
      </div>
      <div class="form-group">
        <%=submit_tag "设置赔率",  class:"form-control"%>
      </div>
    <%end%>
  <div>

  <div style="padding-top:20px;">
    <%= render partial: "records" %>
  </div>
</div>
