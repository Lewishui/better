<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>日期/时间(GMT+8)</th>
      <th>交易号码</th>
      <th>提款方式</th>
      <th>全额(RMB)</th>
      <th>状态</th>
    </tr>
  </thead>

  <tbody>
    <%total_amount=0%>
    <% if @drawings.empty? %>
      <tr>
        <td colspan="6">暂无记录</td>
      <tr>
    <% else %>
      <% @drawings.each do |drawing| %>
        <tr>
          <td><%= drawing.created_at.to_i %></td>
          <td><%= drawing.display_created_at %></td>
          <td><%= drawing.number %></td>
          <td><%= drawing.user_bank_name %></td>
          <td><%= drawing.display_amount %></td>
          <td><%= display_state(drawing.state) %></td>
        </tr>
        <%total_amount += drawing.amount%>
      <% end %>
    <% end %>
    <tr>
      <td colspan="6"><%=content_tag :span, "提款记录总额:#{display_money(total_amount)}", style: 'float:right;'%></td>
    <tr>
  </tbody>
</table>
<%= will_paginate @drawings if @drawings.respond_to? :total_pages%>
