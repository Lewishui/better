<%
@start_date ||= ""
@end_date ||= ""
@state ||= "1"
%>
<div class="">
  <%=form_tag search_my_drawings_path, class:"form-inline", role:"form" do%>

    <div class="form-group">
      <label for="start_date">起始日期</label>
      <%=calendar "start_date", @start_date%>
    </div>
    <div class="form-group">
      <label for="end_date">到</label>
      <%=calendar "end_date", @end_date%>
    </div>
    <div class="form-group">
      <label for="state">状态</label>
      <%=drawing_state_select "state", @state%>
    </div>
    <div class="form-group">
      <%=submit_tag "查询",  class:"form-control"%>
    </div>

  <%end%>
</div>
<div id="drawing_records" style="padding-top:20px;">
  <%= render partial: "records" %>
</div>
<script type="text/javascript">
  $(function () {
    $('.calendar').datetimepicker({format: "YYYY-MM-DD"});
  });
</script>
