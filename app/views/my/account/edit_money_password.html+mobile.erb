<% content_for :page_title  do %>
  <p class="fanhui"> <%= fa_icon "angle-left" %></p>
  <p class="iphonelan">修改资金密码</p>
<% end %>

<div>
  <%= better_form_for(current_user, :url=>{:action=>"change_password"}) do |f| %>
    <div class="form-inputs">
      <%= f.input :current_money_password, label: "当前资金密码", onfocus: "this.type='password'"  %>
      <%= f.input :money_password, label: "资金密码" %>
      <%= f.input :money_password_confirmation, label: "资金密码确认" %>
    </div>
		<div class="form-actions">
			<div class="form-group">
		    <div class="col-sm-offset-3 col-sm-9">
					  <%= f.button :submit, "保存", class:"ggtj1" %>
				</div>
	    </div>
		</div>
  <% end %>

</div>
