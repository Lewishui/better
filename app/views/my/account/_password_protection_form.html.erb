<div style="width:400px;">
  <%= simple_form_for(current_user, :url=>{:action=>"set_password_protection"}) do |f| %>
    <div class="form-input">
      <%= f.input :current_password %>
      <%= f.input :pp_question %>
      <%= f.input :pp_answer %>
    </div>
    <div class="form-action">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
