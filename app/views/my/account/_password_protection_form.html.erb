<div style="width:400px;">
  <%= better_form_for(current_user, :url=>{:action=>"set_password_protection"}) do |f| %>
    <div class="form-input">
      <%= f.input :current_password, label_html: { class: 'col-md-3', style: 'text-align:right;' } %>
      <%= f.input :pp_question , label: '密保问题', label_html: { class: 'col-md-3', style: 'text-align:right;' }%>
      <%= f.input :pp_answer, label: '密保答案', label_html: { class: 'col-md-3', style: 'text-align:right;' } %>
    </div>
    <div class="form-action">
      <%= f.button :submit, "设置", class: 'col-md-offset-3' %>
    </div>
  <% end %>
</div>
