<%disabled = current_user.real_name.present? ? true : false%>
<div class="">
  <%= better_form_for(current_user, :url=>{:controller=>"my/account",:action=>"bind_name"}) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :real_name, disabled: disabled%>
      <%= f.label :id_type %>
      <%= f.collection_radio_buttons :id_type, [[0, 'ID Card'] ,[1, 'PassPort']], :first, :last, disabled: disabled %>
      <%= f.input :id_number, disabled: disabled %>
      <%= f.input :phone %>
      <%=link_to "Send validate code", {}, class:"btn btn-default", href:"#", onclick:"$('#send_code').val('1');$('#edit_user_#{current_user.id}').submit();return false;" %>
      <%= f.input :validate_code %>
      <%=hidden_field_tag :send_code, "0" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
