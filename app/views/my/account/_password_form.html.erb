<ul class="nav nav-tabs" role="tablist" id="passwordTab">
  <li role="presentation" class="active">
    <%=link_to "Login Password",{}, href:"#login", role:"tab", "data-toggle":"tab"%>
  </li>
  <li role="presentation" >
    <%=link_to "Money Password",{}, href:"#money", role:"tab", "data-toggle":"tab"%>
  </li>
</ul>

<div class="tab-content" style="padding-top:15px;">
  <div role="tabpanel" class="tab-pane active" id="login">
    <%= better_form_for(current_user,:url=>{:action=>"change_password"}) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :current_password %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>

  <div role="tabpanel" class="tab-pane" id="money">
    <%= better_form_for(current_user, :url=>{:action=>"change_password"}) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :current_money_password %>
        <%= f.input :money_password %>
        <%= f.input :money_password_confirmation %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>

</div>
