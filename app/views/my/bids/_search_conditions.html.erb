<%
@start_date ||= ""
@end_date ||= ""
@platform ||= "1"
%>
<div class="">
  <%=form_tag search_my_bids_path, class:"form-inline", role:"form" do%>

    <div class="form-group">
      <label for="start_date">起始日期</label>
      <%=calendar "start_date", @start_date%>
    </div>
    <div class="form-group">
      <label for="end_date">到</label>
      <%=calendar "end_date", @end_date%>
    </div>
    <div class="form-group">
      <label for="game_id">平台</label>
      <%=bid_platform_select "game_id", @platform%>
    </div>
    <div class="form-group">
      <%=submit_tag "查询",  class:"form-control"%>
    </div>

  <%end%>
</div>
<div style="float:left">根据第三方平台限制，投注记录查询存在延迟</div>

<div id="bid_records" style="padding-top:20px;">
  <%= render partial: "records" %>
</div>
<script type="text/javascript">
  $(function () {
    $('.calendar').datetimepicker({format: "YYYY-MM-DD"});
  });
</script>
