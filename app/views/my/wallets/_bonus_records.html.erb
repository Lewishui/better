
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>日期/时间(GMT+8)</th>
      <th>交易号码</th>
      <th>全额(RMB)</th>
      <th>说明</th>
    </tr>
  </thead>

  <tbody>
    <%total_amount=0%>
    <% if @bonuses.empty? %>
      <tr>
        <td colspan="5">暂无记录</td>
      <tr>
    <% else %>
      <% @bonuses.each do |bonus| %>
        <tr>
          <td><%= bonus.created_at.to_i %></td>
          <td><%= bonus.created_at %></td>
          <td><%= bonus.number %></td>
          <td><%= bonus.amount %></td>
          <td><%= bonus.memo %></td>
        </tr>
        <%total_amount += transfer.amount%>
      <% end %>
    <% end %>
    <tr>
      <td colspan="5"><%=content_tag :span, "红利记录总额(￥):#{total_amount}", style: 'float:right;'%></td>
    <tr>
  </tbody>
</table>
<%= will_paginate @bonuses if @bonuses.respond_to? :total_pages%>
