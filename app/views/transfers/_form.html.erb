<%= simple_form_for(@transfer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :from_game_center %>
    <%= f.input :to_game_center %>
    <%= f.input :number %>
    <%= f.input :amount %>
    <%= f.input :state %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
