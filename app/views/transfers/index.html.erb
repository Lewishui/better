<%= render partial: "users/profile" %>
<div class="row">
  <%= render partial: "shared/user_sidebar" %>
  <div class="col-md-10 user-content" >
    <p id="notice"><%= notice %></p>
    <div class="my-sub-title ng-binding">充值记录</div>

      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>From game center</th>
            <th>To game center</th>
            <th>Number</th>
            <th>Amount</th>
            <th>State</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @transfers.each do |transfer| %>
            <tr>
              <td><%= transfer.user %></td>
              <td><%= transfer.from_game_center %></td>
              <td><%= transfer.to_game_center %></td>
              <td><%= transfer.number %></td>
              <td><%= transfer.amount %></td>
              <td><%= transfer.state %></td>
              <td><%= link_to 'Show', transfer %></td>
              <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
              <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

  </div>
</div>
