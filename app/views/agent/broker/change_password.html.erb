<div> <h2 class="page-header">更改密码  <small>所有资料都必须填写 </small> </h2>
</div>
<div>
  <%= better_form_for(current_broker, url: {:action=>"change_password"} ) do |f| %>
    <div class="form-inputs">
      <%= f.input :current_password, label: "当前密码" %>
      <%= f.input :password, label: "密码" %>
      <%= f.input :password_confirmation, label: "密码确认" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "更改密码" %>
    </div>
  <% end %>
</div>
