<div class="dailiright_top">
  <%=image_tag "new/dailiimg/anan_03.gif", class: "biaoimg" %>
  <div class="biaotou">
    <h1>更改密码</h1>
    <p>所有资料都必须填写</p>
  </div>
</div>
<div class="dailiright_down">
  <div class="ananan">
  <%= better_form_for(current_broker, url: {:action=>"change_password"} ) do |f| %>
    <div class="form-inputs">
      <%= f.input :current_password, label: "当前密码" %>
      <%= f.input :password, label: "密码" %>
      <%= f.input :password_confirmation, label: "密码确认" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "更改密码", class: "aaniu" %>
    </div>
  <% end %>
  </div>
</div>
