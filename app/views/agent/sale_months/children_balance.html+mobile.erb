<% content_for :page_title  do %>
  <p class="fanhui"> <%= fa_icon "angle-left" %></p>
  <p class="iphonelan">月结余表</p>
<% end %>

<div class="dailiright_down">
  <table class="biaoge table">
    <thead>
      <tr>
        <th>会员</th>
        <th>状态</th>
        <th>活跃人数</th>
        <th>盈利</th>
        <th>银行手续费</th>
        <th>平台手续费</th>
        <th>净盈利</th>
        <th>上月负结余</th>
        <th>本月结余</th>
        <th>放大</th>
      </tr>
    </thead>

    <tbody>
      <% @month_balances.each do |month_balance| %>
        <tr id="<%= month_balance.seller_name %>">
          <td><%= month_balance.seller_name %></td>
          <td><%= t month_balance.state.to_sym %></td>
          <td><%= 0 %></td>
          <td><%= month_balance.display_profit %></td>
          <td><%= month_balance.display_bank_charges %></td>
          <td><%= month_balance.display_platform_charges %></td>
          <td><%= month_balance.display_net_profit %></td>
          <td><%= month_balance.display_last_month_negative_balance %></td>
          <td><%= month_balance.display_this_month_balance %></td>
          <td><%=link_to "放大", nil, href:"#", onclick: "bigger('#{month_balance.seller_name}');" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= will_paginate @children_brokers  if @children_brokers.respond_to? :total_pages %>
</div>

<div id="shougerenb" style="display:none;">
	<table border="0" cellpadding="0" cellspacing="0">
    <tr><td class="ipming">会员</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">状态</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">活跃人数</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">盈利</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">银行手续费</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">平台手续费</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">净盈利</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">上月负结余</td><td class="ipnei"></td></tr>
    <tr><td class="ipming">本月结余</td><td class="ipnei"></td></tr>
	</table>
</div>
