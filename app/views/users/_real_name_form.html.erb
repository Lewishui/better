<div class="" style="width:300px;">
  <%= form_for(current_user, :url=>{:action=>"bind_name"},:role=>"form") do |f| %>
    <div class="form-group">
      <%= f.label :real_name %><br />
      <%= f.text_field :real_name, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :id_type %>
      <label class="checkbox-inline"><%= f.radio_button :id_type, 0 %><%=inline_text_span("ID Card")%></label>
      <label class="checkbox-inline"><%= f.radio_button :id_type, 1 %><%=inline_text_span("PassPort")%></label>
    </div>
    <div class="form-group">
      <%= f.label :id_number %><br />
      <%= f.text_field :id_number, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone %><br />
      <div class="input-group">
        <%= f.text_field :phone, class:"form-control" %>
        <span class="input-group-btn">
            <button class="btn btn-default" type="button">Send validate code</button>
        </span>
      </div>
    </div>
    <div class="form-group">
      <%=label_tag :validate_code %><br />
      <%=text_field_tag :validate_code, "", class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "bind name", class:"btn" %>
    </div>
  <% end %>
</div>
