<div style="width:400px;">
  <%= form_for(current_user, :url=>{:action=>"set_password_protection"},:role=>"form") do |f| %>
    <div class="form-group">
      <%= f.label :current_password %><br />
      <%= f.password_field :current_password, :autocomplete => "off", class:"form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :pp_question, "Question" %><br />
      <%= f.text_field :pp_question, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :pp_answer, "Answer" %><br />
      <%= f.text_field :pp_answer, class:"form-control" %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit", class:"btn" %>
    </div>
  <% end %>
</div>
