<ul class="nav nav-tabs" role="tablist" id="passwordTab">
  <li role="presentation" class="active">
    <%=link_to "Login Password",{}, href:"#login", role:"tab", "data-toggle":"tab"%>
  </li>
  <li role="presentation" >
    <%=link_to "Money Password",{}, href:"#money", role:"tab", "data-toggle":"tab"%>
  </li>
</ul>

<div class="tab-content" style="padding-top:15px;width:300px;">
  <div role="tabpanel" class="tab-pane active" id="login">
    <%= form_for(current_user,:url=>{:action=>"change_password"},:role=>"form") do |f| %>
      <div class="form-group">
        <%= f.label :current_password %><br />
        <%= f.password_field :current_password, class:"form-control", :autocomplete => "off"  %>
      </div>
      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class:"form-control", :autocomplete => "off"  %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "change password", class:"btn" %>
      </div>
    <% end %>
  </div>

  <div role="tabpanel" class="tab-pane" id="money">
    <%= form_for(current_user, :url=>{:action=>"change_password"},:role=>"form") do |f| %>
      <div class="form-group">
        <%= f.label :current_money_password%><br />
        <%= f.password_field :current_money_password, class:"form-control", :autocomplete => "off"  %>
      </div>
      <div class="form-group">
        <%= f.label :money_password %><br />
        <%= f.password_field :money_password, class:"form-control", :autocomplete => "off"  %>
      </div>
      <div class="form-group">
        <%= f.label :money_password_confirmation %><br />
        <%= f.password_field :money_password_confirmation, class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "change money password", class:"btn" %>
      </div>
    <% end %>
  </div>

</div>
